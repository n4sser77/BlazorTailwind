{
  "$schema": "http://json.schemastore.org/template",
  "author": "n4sser77",
  "classifications": [
    "Web",
    "Blazor",
    "Tailwind",
    "Identity"
  ],
  "identity": "BlazorTailwind.Template",
  "name": "Blazor Web App with Tailwind CSS",
  "shortName": "blazortailwind",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "BlazorWebAppTailwind",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net10.0",
          "description": "Target .NET 10.0"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9.0"
        },
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    },
    "SkipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**",
            ".github/**",
            ".template.config/**",
            ".vs/**",
            ".vscode/**",
            "**/bin/**",
            "**/obj/**",
            "**/node_modules/**",
            "**/*.user",
            "**/.gitignore"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!SkipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore' and 'npm install'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}

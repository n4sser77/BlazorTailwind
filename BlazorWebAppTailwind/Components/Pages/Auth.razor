@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]

<PageTitle>Auth</PageTitle>

<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900">Authenticated</h1>
        <p class="mt-1 text-gray-600">You have successfully authenticated.</p>
    </div>

    <div class="rounded-xl border border-gray-200 bg-white p-6 shadow-sm">
        <div class="flex items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-full bg-green-100 text-green-600">
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
            </div>
            <div>
                <AuthorizeView>
                    <p class="text-lg font-medium text-gray-900">Hello, @context.User.Identity?.Name!</p>
                    <p class="text-sm text-gray-500">You are logged in and can access protected resources.</p>
                </AuthorizeView>
            </div>
        </div>
    </div>
</div>
